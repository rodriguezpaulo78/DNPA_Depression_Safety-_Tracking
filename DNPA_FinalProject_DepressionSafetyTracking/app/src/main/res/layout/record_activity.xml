<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50px"
    android:orientation="vertical"
    tools:context=".AudioRecord.RecordAudioActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:text="Grabación de Audio con AudioRecord"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="158dp"
        android:layout_height="191dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/iconaudio" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="162dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:layout_marginBottom="50px"
        android:background="@drawable/boton_redondo"
        android:backgroundTint="#4CAF50"
        android:drawablePadding="8dp"
        android:text="Iniciar Grabación"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50px"
        android:drawablePadding="8dp"
        android:text="Detener Grabación"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="393dp" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"

        android:text="Reproducir Audio" />


</LinearLayout>